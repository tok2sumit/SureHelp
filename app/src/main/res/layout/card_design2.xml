<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:background="@drawable/rounded_corner"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/card2_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/pill" />

        <TextView
            android:id="@+id/event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/card2_image"
            android:fontFamily="@font/baloo"
            android:text="Locationn"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/time_and_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="aldfjasdfjasdfsafasfh sdihsfg ais a asifhas fgag asigha sfdjh fasd  sjdfh  jhas "
            android:layout_below="@id/event"
            android:layout_toRightOf="@+id/card2_image"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_cancel_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_below="@+id/event"
            android:layout_toRightOf="@+id/time_and_date"
            android:background="@drawable/button_bg"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>